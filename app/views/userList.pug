doctype html
html
  head
    title Our Customers
    style.
      /* Custom CSS for styling */
      body {
        font-family: 'Arial', sans-serif;
        background-image: url('https://images.app.goo.gl/57N14xCeycYq7NkK6'); 
        background-size: cover; 
        background-position: center center; 
        background-attachment: fixed; 
        color: #fff; 
      }
      .container {
        border-radius: 8px;
        padding: 20px;
      }
      .text-center {
        color: #ff0062;
        margin-bottom: 20px;
        margin-left: 22rem;
        font-size: 5rem;
      }
      .list-group-item {
        font-size: 1.5rem;
        color: #495057;
        padding: 20px;
        margin: 5px 0;
        border-radius: 4px;
        transition: background-color 0.3s;
      }
      .list-group {
        margin-left: 29rem;
        margin-top: 5rem;
      }
      .list-group-item:hover {
        background-color: #f1f1f1;
      }
      .btn {
        background-color: #28a745;
        color: #fff;
        text-align: center;
        padding: 8px 16px;
        border-radius: 4px;
        text-decoration: none;
        font-weight: bold;
      }
  body
    .container.mt-4
      h1.text-center Our Customers
      ul.list-group
        each user in users
          li.list-group-item
            a.btn(href="#", name=user.name) #{user.name}
