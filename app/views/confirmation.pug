doctype html
html
  head
    title Password Set / New User Added
    style.
      body {
        font-family: Arial, sans-serif;
        background-image: url('https://media.istockphoto.com/id/1438530555/photo/empty-charcuterie-small-business-concepts.jpg?s=1024x1024&w=is&k=20&c=lX3t64iBj40us2MRy1pif6PaJL4FaU30R4rOR4Q78_4='); 
        background-size: cover;
        background-position: center;
        margin: 0;
        padding: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        color: #333;
      }
      .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(10,10,10,0.45);
        z-index: 1;
      }

      .container {
        position: relative;
        z-index: 2;
        max-width: 44rem;
        width: 100%;
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
      }
      h1 {
        font-size: 26px;
        color:rgb(0, 0, 0);
        margin-bottom: 15px;
      }
    
      button {
        background-color:rgb(0, 0, 0);
        color: white;
        font-size: 16px;
        padding: 12px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
        transition: background-color 0.3s;
      }
      button:hover {
        background-color:rgb(0, 0, 0);
      }
  body
    .overlay
    .container
      h1 #{message}
      button(onclick="window.location.href='/login'") Go to Login
