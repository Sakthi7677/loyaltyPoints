  body
   .form-container
      h1 Loyalty Points
      form(action='/points')
        div
          label(for='username') Username:
          input(type='text', id='username', name='username', required)
        
        div
          label(for='password') Password:
          input(type='password', id='password', name='password', required)
        
        div
          button(type='submit') Login
